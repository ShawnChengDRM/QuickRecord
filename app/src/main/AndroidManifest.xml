<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.djxg.silence.quickrecord">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScannerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".editor.EditActivity" />
        <activity android:name=".BusinessC.SplashActivity" />
        <activity android:name=".BusinessC.MainEngineActivity" />
        <activity android:name=".BusinessC.WebViewActivity" />
        <activity android:name=".BusinessC.CameraAlbumActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.djxg.silence.quickrecord.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".editor.InfoEditActivity"
            android:label="@string/title_activity_info_edit"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".editor.InfoShowActivity"
            android:label="@string/title_activity_info_show"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>